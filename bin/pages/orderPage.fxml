<AnchorPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.OrderPageController">
   <children>
      <BorderPane prefHeight="768.0" prefWidth="1024.0">
         <top>
            <Label text="Order List" BorderPane.alignment="CENTER">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
         </top>
         <center>
            <GridPane BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="241.0" minHeight="0.0" prefHeight="34.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="600.0" minHeight="10.0" prefHeight="444.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="222.0" minHeight="10.0" prefHeight="222.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TableView fx:id="table" prefHeight="543.0" prefWidth="1024.0" GridPane.rowIndex="1">
                    <columns>
                      <TableColumn fx:id="tc_orderId" prefWidth="317.0" text="Order ID" />
                      <TableColumn fx:id="tc_staffId" prefWidth="328.0" text="Staff ID" />
                        <TableColumn fx:id="tc_total" prefWidth="177.0" text="Total" />
                        <TableColumn fx:id="tc_date" prefWidth="177.0" text="Date" />
                    </columns>
                  </TableView>
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Order ID.:" GridPane.halignment="RIGHT" />
                        <TextField fx:id="tf_orderID" GridPane.columnIndex="1" />
                        <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#btnSearchClick" text="Search" GridPane.columnIndex="2" />
                     </children>
                  </GridPane>
                  <GridPane GridPane.rowIndex="2">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Button fx:id="btnAddOrder" mnemonicParsing="false" onAction="#navOrderItems" prefHeight="40.0" prefWidth="142.0" text="Add Order" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                        <Button fx:id="btnHomePage" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#navHomePage" prefHeight="40.0" prefWidth="142.0" text="Home Page" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                        <Button fx:id="btnPrintReceipt" alignment="CENTER" mnemonicParsing="false" onAction="#btnPrintReceiptClick" prefHeight="40.0" prefWidth="142.0" text="Print Receipt " GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                     </children>
                  </GridPane>
               </children>
            </GridPane>
         </center>
      </BorderPane>
